<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="clothesup.turningpoint.clothesup.MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="#707070" >

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/main_logoimage"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:id="@+id/login_with_fb_button"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/login_with_fb"
            android:layout_margin="10dp" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:id="@+id/login_with_naver_button"
            android:src="@drawable/login_with_naver"
            android:layout_alignTop="@+id/login_with_fb_button"
            android:layout_toLeftOf="@+id/login_with_fb_button"
            android:layout_toStartOf="@+id/login_with_fb_button" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:id="@+id/login_with_google_button"
            android:src="@drawable/login_with_google"
            android:layout_alignTop="@+id/login_with_fb_button"
            android:layout_toRightOf="@+id/login_with_fb_button"
            android:layout_toEndOf="@+id/login_with_fb_button" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="회원가입하기"
        android:id="@+id/main_sign_in"
        android:background="#707070"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="25sp" />

</LinearLayout>
