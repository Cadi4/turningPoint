<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_height="280dp"
    tools:context="clothesup.turningpoint.clothesup.PopupActivity"
    android:orientation="vertical"
    android:background="@drawable/square_line">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B 31"
            android:id="@+id/textview_popup_store_id"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:id="@+id/textView2"
            android:textColor="#777777"
            android:layout_alignTop="@+id/textview_popup_store_id"
            android:layout_toRightOf="@+id/textview_popup_store_id"
            android:layout_toEndOf="@+id/textview_popup_store_id"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="꼬까옷"
            android:id="@+id/textview_popup_store_name"
            android:textColor="#000000"
            android:layout_alignTop="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:layout_toEndOf="@+id/textView2" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="14dp"
            android:id="@+id/imageView"
            android:layout_below="@+id/textview_popup_store_id"
            android:layout_alignLeft="@+id/textview_popup_store_id"
            android:layout_alignStart="@+id/textview_popup_store_id"
            android:src="@drawable/kind_"
            android:layout_marginTop="5dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="12dp"
            android:id="@+id/imageView5"
            android:src="@drawable/style_"
            android:layout_alignBottom="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="3dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="12dp"
            android:id="@+id/imageView6"
            android:src="@drawable/style_"
            android:layout_alignTop="@+id/imageView5"
            android:layout_toRightOf="@+id/imageView5"
            android:layout_toEndOf="@+id/imageView5"
            android:layout_marginLeft="2dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="12dp"
            android:id="@+id/imageView7"
            android:src="@drawable/style_"
            android:layout_alignTop="@+id/imageView6"
            android:layout_toRightOf="@+id/imageView6"
            android:layout_toEndOf="@+id/imageView6"
            android:layout_marginLeft="2dp" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/imageView8"
            android:src="@drawable/favorite"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/imageView9"
            android:layout_toStartOf="@+id/imageView9"
            android:layout_marginTop="15dp" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/imageView9"
            android:src="@drawable/history"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="13dp" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aaaaaa"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"></LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp" >

        <ImageView
            android:layout_width="45dp"
            android:layout_height="18dp"
            android:id="@+id/imageView10"
            android:src="@drawable/able_card"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:id="@+id/imageView16"
            android:src="@drawable/popup_o"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="18dp"
            android:id="@+id/imageView11"
            android:src="@drawable/able_cash"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:id="@+id/imageView17"
            android:src="@drawable/popup_o"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="18dp"
            android:id="@+id/imageView12"
            android:src="@drawable/able_exchange"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:id="@+id/imageView18"
            android:src="@drawable/popup_o"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="18dp"
            android:id="@+id/imageView13"
            android:src="@drawable/able_refund"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:id="@+id/imageView19"
            android:src="@drawable/popup_o"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="18dp"
            android:id="@+id/imageView14"
            android:src="@drawable/able_fitting"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:id="@+id/imageView20"
            android:src="@drawable/popup_o"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aaaaaa"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_weight="1" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_weight="1" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="상점 평균 별점"
                    android:id="@+id/textView4"
                    android:textColor="#000000"
                    android:layout_alignTop="@+id/textView2"
                    android:layout_toRightOf="@+id/textView2"
                    android:layout_toEndOf="@+id/textView2"
                    android:textSize="10sp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="3dp"
                    android:textAlignment="center" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.0"
                        android:id="@+id/textView3"
                        android:textColor="#000000"
                        android:layout_alignTop="@+id/textView2"
                        android:layout_toRightOf="@+id/textView2"
                        android:layout_toEndOf="@+id/textView2"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:id="@+id/image_popup_star1"
                        android:src="@drawable/star_2"
                        android:layout_alignParentTop="true"
                        android:layout_toLeftOf="@+id/imageView9"
                        android:layout_toStartOf="@+id/imageView9"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="2dp" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:id="@+id/image_popup_star2"
                        android:src="@drawable/star_1"
                        android:layout_alignParentTop="true"
                        android:layout_toLeftOf="@+id/imageView9"
                        android:layout_toStartOf="@+id/imageView9"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="2dp" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:id="@+id/image_popup_star3"
                        android:src="@drawable/star_1"
                        android:layout_alignParentTop="true"
                        android:layout_toLeftOf="@+id/imageView9"
                        android:layout_toStartOf="@+id/imageView9"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="2dp" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:id="@+id/image_popup_star4"
                        android:src="@drawable/star_1"
                        android:layout_alignParentTop="true"
                        android:layout_toLeftOf="@+id/imageView9"
                        android:layout_toStartOf="@+id/imageView9"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="2dp" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:id="@+id/image_popup_star5"
                        android:src="@drawable/star_1"
                        android:layout_alignParentTop="true"
                        android:layout_toLeftOf="@+id/imageView9"
                        android:layout_toStartOf="@+id/imageView9"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="2dp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_weight="1.5"
            android:layout_marginBottom="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView15"
                android:src="@drawable/popup_detail"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>