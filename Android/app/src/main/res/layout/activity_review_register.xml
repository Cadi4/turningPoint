<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#dd9999">

        <TextView
            android:id="@+id/textView_review_topbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="리뷰작성"
            android:textColor="#ffffff"
            android:textSize="27sp" />

        <ImageView
            android:id="@+id/imageView_review_backToDetail"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="false"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/arrow_counterpart" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="등록"
            android:id="@+id/textView_review_register"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="14dp"
            android:layout_marginEnd="14dp"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageView_review_storeImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="38dp"
            android:layout_marginStart="38dp"
            android:src="@android:mipmap/sym_def_app_icon" />

        <TextView
            android:id="@+id/textView_review_storeId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp"
            android:layout_toEndOf="@+id/imageView_review_storeImage"
            android:layout_toRightOf="@+id/imageView_review_storeImage"
            android:text="B 301"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView_review_storeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView_review_storeId"
            android:layout_marginLeft="108dp"
            android:layout_marginStart="108dp"
            android:layout_toEndOf="@+id/imageView_review_storeImage"
            android:layout_toRightOf="@+id/imageView_review_storeImage"
            android:text="꼬까옷"
            android:textColor="#000000"
            android:textSize="20sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dcdcdc" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="방문 날짜"
            android:id="@+id/textView7"
            android:textColor="#000000"
            android:textSize="13sp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/editText_visit_date"
            android:layout_toStartOf="@+id/editText_visit_date"
            android:layout_marginRight="9dp"
            android:layout_marginEnd="9dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageView5"
            android:src="@drawable/calendar"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/textView7"
            android:layout_toStartOf="@+id/textView7" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editText_visit_date"
            android:layout_alignBottom="@+id/imageView5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="31dp"
            android:layout_marginEnd="31dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="더 말하고 싶어요"
            android:id="@+id/textView8"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:textColor="#000000"
            android:textSize="13sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="※허위 및 거짓된 정보는 쓰면 안되요! 솔직한 후기를 써주시길 바랍니다."
            android:id="@+id/textView9"
            android:textSize="8sp"
            android:layout_alignBottom="@+id/textView8"
            android:layout_toRightOf="@+id/textView8"
            android:layout_toEndOf="@+id/textView8"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/xml_border"
        android:layout_width="320dp"
        android:layout_height="266dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.75">

        <RelativeLayout
            android:background="@drawable/xml_border_photo"
            android:layout_width="280dp"
            android:layout_height="150dp"
            android:layout_marginTop="9dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/layout_review_photo">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView111"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/photo" />
        </RelativeLayout>

        <view xmlns:android="http://schemas.android.com/apk/res/android"
            class="clothesup.turningpoint.clothesup.store.ReviewActivity$LinedEditText"
            android:autoLink="web|email"
            android:background="@android:color/transparent"
            android:capitalize="sentences"
            android:cursorVisible="true"
            android:fadingEdge="vertical"
            android:gravity="top"
            android:hint="(10~200자 이내로 써주시길 바랍니다)"
            android:id="@+id/editText_review_text"
            android:inputType="textMultiLine"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/layout_review_photo"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="20dp"
            android:layout_width="315dp"
            android:layout_height="135dp"
            android:maxLines="6"
            android:padding="5dp"
            android:textColor="#000000"
            android:textSize="17sp" />

    </RelativeLayout>

</LinearLayout>