<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.MainLoginActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="#707070" >

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/main_logoimage"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/naver_google_layout">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:id="@+id/login_with_naver_button"
            android:src="@drawable/login_with_naver"
            android:layout_alignTop="@+id/login_with_google_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="90dp"
            android:layout_marginStart="90dp" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:id="@+id/login_with_google_button"
            android:src="@drawable/login_with_google"
            android:layout_marginRight="90dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="90dp" />

    </RelativeLayout>


